@model SageHackbarthFinal.Models.CustomerModel

<script>
	var counterUser = 1;
	function Display() {
		var userText = document.getElementById("boxUser").value;
		if (userText == "Shawn") {
			document.getElementById("txtUser").value = "PsychicDetective";
			document.getElementById("txtFName").value = "Shawn";
			document.getElementById("txtLName").value = "Spencer";
			document.getElementById("Vehicle").selectedIndex = 2;
		} else if (userText == "Gus") {
			document.getElementById("txtUser").value = "TopPharmaceuticalRep";
			document.getElementById("txtFName").value = "Burton";
			document.getElementById("txtLName").value = "Guster";
			document.getElementById("Vehicle").selectedIndex = 1;
		} else {
			if (userText == 2) {
				document.getElementById("txtUser").value = this.marker2[2];
				document.getElementById("txtFName").value = this.marker2[0];
				document.getElementById("txtLName").value = this.marker2[1];
				document.getElementById("Vehicle").selectedIndex = marker2[3];
			} else if (userText == 3) {
				document.getElementById("txtUser").value = this.marker3[2];
				document.getElementById("txtFName").value = this.marker3[0];
				document.getElementById("txtLName").value = this.marker3[1];
				document.getElementById("Vehicle").selectedIndex = marker3[3];
			}
		}
		changeAmount();
	}

	function changeAmount() {
		if (document.getElementById("Vehicle").selectedIndex == 0) {
			document.getElementById("amount").value = "$2,000";
		} else if (document.getElementById("Vehicle").selectedIndex == 1) {
			document.getElementById("amount").value = "$10,000";
		} else if (document.getElementById("Vehicle").selectedIndex == 2) {
			document.getElementById("amount").value = "$3,000";
		}
	}

	function createArray() {
		counterUser++;
		var newFirst = document.getElementById("newFName").value;
		var newLast = document.getElementById("newLName").value;
		var newUsername = document.getElementById("newUser").value;
		var userVehicle = document.getElementById("Vehicle").value;
		this["marker" + counterUser] = [newFirst, newLast, newUsername, userVehicle];
		createUser();
	}

	function createUser() {
		var newUse = document.getElementById("boxUser");
		newUse.options[newUse.options.length] = new Option(document.getElementById("newFName").value + " " + document.getElementById("newLName").value, counterUser);
	}
	

	
</script>
<html>
<head>

</head>
<body>
	<div>
		<select id="boxUser" onchange="Display()">
			<option value="Shawn" selected>Shawn Spencer</option>
			<option value="Gus">Burton Guster</option>
		</select>
		<button onclick="Display()">Select</button>
	</div>
	<label>Username: </label><input type="text" id="txtUser" readonly /> <br />
	<label>First Name: </label><input type="text" id="txtFName" readonly /> <label>Last Name: </label><input type="text" id="txtLName" readonly /><br />
	<label>Total Coverage: </label><input type="text" id="amount" readonly/>
	<br /><label>=====================================================</label><br />
	<label>Add user -> First Name: </label><input type="text" id="newFName" /><label> Last Name: </label><input type="text" id="newLName" /><label> UserName: </label><input type="text" id="newUser" />
	<br />
	<lable>What do you want insured?</lable>
	<select id="Vehicle" onchange="changeAmount()">
		<option value="0" selected>Car</option>
		<option value="1">House</option>
		<option value="2">Boat</option>
	</select>
	<button onclick="createArray()">Create User</button>
</body>
</html>
